<section class="content" id="header">

    <div class="container">

        <div class="card card-identity border-light col-md-4" style="max-width: 20rem;">
            <div class="card-body card-body-identity">
                <h6 class="card-subtitle mb-2"><i class="fas fa-at"></i> {{ profile.email }}</h6>
                <p class="card-text mb-2"><i class="fas fa-mobile-alt"></i> {{ profile.telephone }}</p>
                <p class="card-text mb-2"><i class="fas fa-map-marker-alt"></i>  {{ profile.city }}</p>
                <a href="#" class="card-link social-icon mt-2"><i class="fab fa-linkedin"></i></a>
                <a href="#" class="card-link social-icon mt-2"><i class="fab fa-github"></i></a>
                <a href="#" class="card-link social-icon mt-2"><i class="fab fa-twitter-square"></i></a>
                <span class="btn btn-success btn-sm card-link d-flex align-items-end"><i class="fas fa-toggle-on"></i>&nbsp;Disponible</span>
            </div>
        </div>

        <div class="label text-center col-md-8">
            <h1 class="">{{ profile.name }}</h1>
            <h2 class="h4 label-cv">{{ profile.jobTitle }}</h2>
        </div>

    </div>

</section>

